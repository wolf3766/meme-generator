<!doctype html>
<html lang="en">
  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Preview</title>
  </head>
  <body>
    <nav class="navbar navbar-light" style="background-color: #e3f2fd; padding-left: 650px;">
          <h1>Streamed Memes</h1> 
    </nav>
            
    <div style=" width: 10%; margin: 0 auto;">   

     <% list.forEach(function(item){ %>
     <div class="card" style="width: 18rem; margin-bottom: 10px; border-color: powderblue;"> 
      <img class="card-img-top" src="<%= item.URL %>" alt="Card image">
      <div class="card-body"> 
      <p class="card-text"> <%= item.name %> </p>
        <p class="card-text"> <%= item.description %> </p> 
      </div> 
   </div> 

   <% }); %>
  </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  </body>
</html>
